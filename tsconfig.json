{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node"
  },
  "include": ["lib/**/*.ts", "types/**/*.d.ts", "index.ts"],
  "exclude": ["node_modules"]
}
