{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],  // Toujours utiliser un point-virgule
    "quotes": ["error", "single"],  // Utiliser des guillemets simples
    "no-unused-vars": "warn"  // Avertir sur les variables non utilis√©es
  }
}
